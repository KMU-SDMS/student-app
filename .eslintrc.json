{
  "root": true,
  "env": { "es2024": true, "node": true },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": { "jsx": true }
  },
  "plugins": ["@typescript-eslint", "react", "react-hooks", "react-native", "import"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:react-native/all",
    "plugin:import/recommended",

    "prettier" // ★ 마지막: 포맷 규칙 off → Prettier에 위임
  ],
  "settings": {
    "react": { "version": "detect" }
  },
  "rules": {
    // RN/React 17+에서 불필요
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",

    // RN 팀 취향에 맞게 조정(필요시 바꾸세요)
    "react-native/no-inline-styles": "off",
    "react-native/no-raw-text": "off",

    // TS에서 no-unused-vars는 type import 등 오탑재 방지용 비활성
    "@typescript-eslint/no-unused-vars": [
      "warn",
      { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }
    ]
  },
  "ignorePatterns": ["node_modules/", "android/", "ios/", "dist/", "build/", "coverage/"]
}
